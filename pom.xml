				<type>test-jar</type>
			</dependency>


			<dependency>
				<groupId>io.primeval</groupId>
				<artifactId>primeval-codex</artifactId>
				<version>${primeval-codex.version}</version>
			</dependency>


			<dependency>
				<groupId>io.primeval</groupId>
				<artifactId>primeval-codex</artifactId>
				<version>${primeval-codex.version}</version>
