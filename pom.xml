	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>io.primeval</groupId>
				<artifactId>primeval-commons</artifactId>
				<version>${primeval-commons.version}</version>
			</dependency>

			<dependency>
				<groupId>io.primeval</groupId>
				<artifactId>primeval-commons</artifactId>
